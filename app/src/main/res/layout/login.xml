<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/custom_back"
    tools:context=".quiz_contest.authentication.LoginScreen">

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/phone2"
        android:layout_alignRight="@+id/phone2"
        android:layout_centerVertical="true"
        android:addStatesFromChildren="true"
        android:baselineAligned="false"
        android:gravity="center_vertical" >

        <EditText
                android:id="@+id/password2"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:background="@drawable/textbox_click"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white"
                android:padding="20dp"
                android:ems="10"
                android:maxLength="40"
                android:hint="Password"
                android:inputType="textPassword"
                android:maxLines="1"
            android:fontFamily="sans-serif"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="20dp" />

        </RelativeLayout>

    <EditText
        android:id="@+id/phone2"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:background="@drawable/textbox_click"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        android:padding="20dp"
        android:ems="10"
        android:hint="Mobile No."
        android:maxLength="10"
        android:inputType="phone"
        android:layout_above="@+id/rl"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="26dp">

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/signin2"
        android:layout_width="90dp"
        android:background="@android:color/transparent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"

        android:text="Sign in"
        android:onClick="action"
        android:textSize="20sp"
        android:layout_below="@+id/start"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp" />

    <Button
        android:id="@+id/start"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:onClick="action"
        android:background="@drawable/button_click"
        android:textColor="@android:color/white"
        android:text="Continue"
        android:layout_below="@+id/rl"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="65dp" />

</RelativeLayout>